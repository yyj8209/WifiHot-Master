<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!-- 端口和IP设置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/server_ip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ip_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="服务器IP" />
        <EditText
            android:id="@+id/ip_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:enabled="false"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="端口" />
        <!-- 端口号 -->
        <EditText
            android:id="@+id/port_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="8080" />
        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动服务" />
    </LinearLayout>

    <!-- 发送的消息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_msg"
        android:layout_below="@+id/server_ip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/message_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送消息"/>
        <!-- 发送消息框 -->
        <EditText
            android:id="@+id/message_EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"

            android:hint="输入要发送的消息：" />
        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送消息" />
    </LinearLayout>

    <!-- 客户端列表及服务器提示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:layout_below="@+id/send_msg"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:id="@+id/lv_client"/>

            <TextView
                android:id="@+id/receive_TextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="1dip"
                android:textColor="@android:color/white"
                android:background="@android:color/black"
                android:scrollbars="vertical"
                android:text=""/>
        </LinearLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:rowCount="4"
            android:columnCount="2">
            <TextView
                android:id="@+id/receive_TextView1"
                android:text="receive_TextView 1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView2"
                android:text="receive_TextView 2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView3"
                android:text="receive_TextView 3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView4"
                android:text="receive_TextView 4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView5"
                android:text="receive_TextView 5"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView6"
                android:text="receive_TextView 6"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView7"
                android:text="receive_TextView 7"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
            <TextView
                android:id="@+id/receive_TextView8"
                android:text="receive_TextView 9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout >

